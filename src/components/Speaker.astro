---
interface StatItem {
  value: string;
  label: string;
}

interface Props {
  content?: {
    name?: string;
    title?: string;
    bio?: string;
    photo?: string;
    stats?: StatItem[];
  };
}

const c = Astro.props.content || {};
const name = c.name || 'Julián Mora';
const title = c.title || 'Co-founder & CMO de Lummia';
const bio = c.bio || 'Lummia ha facturado más de <strong>$9.5M USD</strong> en ecommerce. Sus mejores días de ventas han sido en fechas promocionales, donde ha perfeccionado un sistema que le permite escalar de forma rentable y agresiva. En esta clase privada, Julián compartirá los 4 pilares que han hecho posible estos resultados.';
const photo = c.photo || '/assets/julian-mora.png';
const stats: StatItem[] = c.stats || [
  { value: '$9.5M+', label: 'Facturados' },
  { value: '14.5x', label: 'ROAS' },
  { value: '+777%', label: 'Ventas' },
];
---

<section class="speaker">
  <div class="container speaker-content">
    <div class="speaker-photo-wrap" data-animate="slide-left">
      <div class="speaker-photo">
        <img
          src={photo}
          alt={`${name} — ${title}`}
          width="280"
          height="280"
          loading="lazy"
        />
      </div>
    </div>

    <div class="speaker-info" data-animate="slide-right">
      <span class="speaker-label">Tu instructor</span>
      <h2 class="speaker-name">{name}</h2>
      <p class="speaker-title">{title}</p>
      <p class="speaker-bio" set:html={bio} />

      <div class="speaker-stats">
        {stats.map((stat) => (
          <div class="speaker-stat">
            <span class="stat-value">{stat.value}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .speaker {
    background: var(--white);
    padding: var(--section-padding);
  }

  .speaker-content {
    display: flex;
    align-items: center;
    gap: 56px;
    max-width: 900px;
    margin: 0 auto;
  }

  .speaker-photo-wrap {
    flex-shrink: 0;
  }

  .speaker-photo {
    width: 280px;
    height: 280px;
    flex-shrink: 0;
  }

  .speaker-photo img {
    width: 100%;
    height: auto;
  }

  .speaker-info {
    flex: 1;
  }

  .speaker-label {
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    color: var(--lila);
    display: block;
    margin-bottom: 8px;
  }

  .speaker-name {
    font-size: clamp(28px, 4vw, 36px);
    color: var(--azul-oscuro);
    margin-bottom: 4px;
  }

  .speaker-title {
    font-size: 16px;
    color: var(--text-muted);
    margin-bottom: 20px;
    font-weight: 500;
  }

  .speaker-bio {
    font-size: 16px;
    color: var(--text-dark);
    line-height: 1.7;
    margin-bottom: 28px;
  }

  .speaker-bio strong {
    color: var(--azul-oscuro);
    font-weight: 700;
  }

  .speaker-stats {
    display: flex;
    gap: 24px;
  }

  .speaker-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: var(--light-blue);
    padding: 16px 24px;
    border-radius: 10px;
  }

  .stat-value {
    font-size: 22px;
    font-weight: 700;
    color: var(--azul-oscuro);
  }

  .stat-label {
    font-size: 12px;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media (max-width: 768px) {
    .speaker {
      padding: var(--section-padding-mobile);
    }

    .speaker-content {
      flex-direction: column;
      text-align: center;
      gap: 32px;
    }

    .speaker-photo {
      width: 200px;
      height: 200px;
    }

    .speaker-stats {
      justify-content: center;
    }

    .speaker-stat {
      padding: 12px 18px;
    }

    .stat-value {
      font-size: 18px;
    }

    .speaker-bio {
      font-size: 15px;
    }
  }
</style>
