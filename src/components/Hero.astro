---
interface Props {
  content?: {
    tag?: string;
    headline?: string;
    highlight?: string;
    headlineSuffix?: string;
    subheadline?: string;
    ctaText?: string;
    microText?: string;
  };
}

const c = Astro.props.content || {};
const tag = c.tag || 'SOLO 10 CUPOS DISPONIBLES';
const headline = c.headline || 'El Sistema de';
const highlight = c.highlight || '$1.5M USD';
const headlineSuffix = c.headlineSuffix || 'para Dominar Fechas Promocionales';
const subheadline = c.subheadline || 'Julián Mora, Co-founder & CMO de Lummia, te revelará en una MasterClass exclusiva para 10 personas la estrategia exacta con la que facturó <strong>$1.5M USD en el último Black Friday</strong> — con un ROAS de 14.5x';
const ctaText = c.ctaText || 'Solicita Tu Cupo';
const microText = c.microText || 'Solo 10 cupos — Acceso exclusivo';
---

<section class="hero">
  <div class="container hero-content">
    <div class="hero-text">
      <span class="hero-tag">{tag}</span>
      <h1 class="hero-headline">
        {headline} <span class="highlight">{highlight}</span> {headlineSuffix}
      </h1>
      <p class="hero-subheadline" set:html={subheadline} />
    </div>

    <div class="hero-video" role="region" aria-label="Video de presentación">
      <script src="https://fast.wistia.com/player.js" async></script>
      <script src="https://fast.wistia.com/embed/862rnbn2fo.js" async type="module"></script>
      <wistia-player media-id="862rnbn2fo" aspect="1.7777777777777777"></wistia-player>
    </div>

    <div class="hero-cta-wrap">
      <a href="#reserva" class="cta-button">{ctaText}</a>
      <p class="hero-micro">{microText}</p>
    </div>
  </div>
</section>

<style>
  .hero {
    background: var(--lila-dark);
    padding: 60px 24px 72px;
    text-align: center;
    overflow: hidden;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 36px;
  }

  .hero-text {
    max-width: 780px;
    animation: fadeInUp 0.7s ease-out both;
  }

  .hero-tag {
    display: inline-block;
    background: var(--amarillo);
    color: var(--azul-oscuro);
    font-size: 13px;
    font-weight: 700;
    letter-spacing: 1.5px;
    padding: 8px 20px;
    border-radius: 50px;
    margin-bottom: 20px;
    animation: fadeIn 0.5s ease-out both;
  }

  .hero-headline {
    font-size: clamp(28px, 5vw, 46px);
    color: var(--white);
    margin-bottom: 20px;
    line-height: 1.15;
    animation: fadeInUp 0.7s ease-out 0.15s both;
  }

  .highlight {
    color: var(--amarillo);
  }

  .hero-subheadline {
    font-size: clamp(16px, 2.2vw, 19px);
    color: var(--white);
    opacity: 0.92;
    max-width: 680px;
    margin: 0 auto;
    line-height: 1.65;
    animation: fadeInUp 0.7s ease-out 0.3s both;
  }

  .hero-subheadline strong {
    color: var(--amarillo);
    font-weight: 700;
  }

  .hero-video {
    width: 100%;
    max-width: 720px;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
    animation: scaleIn 0.7s ease-out 0.4s both;
  }

  wistia-player[media-id='862rnbn2fo']:not(:defined) {
    background: center / contain no-repeat
      url('https://fast.wistia.com/embed/medias/862rnbn2fo/swatch');
    display: block;
    filter: blur(5px);
    padding-top: 56.25%;
  }

  .hero-cta-wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    animation: fadeInUp 0.7s ease-out 0.55s both;
  }

  .hero-micro {
    font-size: 14px;
    color: var(--white);
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 40px 16px 56px;
    }

    .hero-content {
      gap: 28px;
    }

    .hero-tag {
      font-size: 11px;
      padding: 6px 16px;
    }
  }
</style>
